@page "/"
@page "/results"

@using YouTubeAdLessSimulator.Components.Ctl
@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>

<YouTubeSearch ButtonContent="Search" SearchTerm="@Query" ButtonClass="btn btn-outline-success" InputClass="form-control input-lg" InputPlaceholder="YouTube Search" />



@if (string.IsNullOrEmpty(Query) || string.IsNullOrWhiteSpace(Query))
{
    <br />
    <LaunchVideo ButtonContent="Launch" ButtonClass="btn btn-outline-danger" InputClass="form-control input-lg" InputPlaceholder="Launch a YouTube-Video by Link" />
}


@code {
    [SupplyParameterFromQuery(Name = "search_query")]
    public string Query { get; set; }
}