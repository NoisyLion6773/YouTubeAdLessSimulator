@page "/"
@page "/results"

@using YouTubeAdLessSimulator.Components.Ctl
@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>

<YouTubeSearch SearchTerm="@Query" CssClass="form-control input-lg" placeholder="YouTube Search" />
<br />

@if (string.IsNullOrEmpty(Query) || string.IsNullOrWhiteSpace(Query))
{
    <LaunchVideo placeholder="Launch a YouTube-Video by Link" />
}


@code {
    [SupplyParameterFromQuery(Name = "search_query")]
    public string Query { get; set; }
}